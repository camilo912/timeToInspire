<!DOCTYPE html>
<html>
  <head>
    <title>TimeToInspire</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class='navbar navbar-default' role='navigation'>
      <div class='navbar-header'>
        <ul class='nav navbar-nav'>
          <li class='active'><%= link_to 'Home', root_path %></li>
          <li class='active'><%= link_to 'Users', users_path %></li>
          <li class='active'><%= link_to 'Posts', posts_path %></li>
          <% if current_user %>
            <li class ='active'><%= link_to "Edit Profile", edit_user_path(current_user.id) %></li>
            <li class ='active'><%= link_to "Logout: #{current_user.email}", :logout, method: :post %></li>
          <% else %>
            <li class ='active'><%= link_to "Register", new_user_path %></li>
            <li class ='active'><%= link_to "Login", :login %></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
